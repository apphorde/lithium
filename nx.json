{
  "workspaceLayout": {
    "libsDir": "./lib",
    "appsDir": "./lib"
  },
  "targetDefaults": {
    "tsc": {
      "dependsOn": ["^tsc", "^build"],
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc -p {projectRoot}/tsconfig.json --noEmit --rootDir {projectRoot}"
      }
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": true,
      "executor": "nx:run-commands",
      "options": {
        "command": "rollup -c {projectRoot}/rollup.config.js"
      }
    },
    "test": {
      "dependsOn": ["build", "tsc"],
      "executor": "nx:run-commands",
      "options": {
        "command": "test -f {projectRoot}/src/index.spec.ts && npx tsx {projectRoot}/src/index.spec.ts"
      }
    },
    "publish": {
      "dependsOn": ["^build", "^tsc"],
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm publish --no-git-checks --access public -r {projectRoot}"
      }
    }
  }
}
