{
  "workspaceLayout": { "libsDir": "./lib", "appsDir": "./lib" },
  "targetDefaults": {
    "tsc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc -p {projectRoot}/tsconfig.json --noEmit"
      }
    },
    "build": {
      "dependsOn": ["^build", "tsc"],
      "executor": "@nx/rollup:rollup",
      "options": {
        "rollupConfig": "{projectRoot}/rollup.config.mjs"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo true"
      }
    }
  }
}
