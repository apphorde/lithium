{
  "workspaceLayout": { "libsDir": "./lib", "appsDir": "./lib" },
  "plugins": ["@nx/rollup/plugin"],
  "targetDefaults": {
    "tsc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsc -p {projectRoot}/tsconfig.json --noEmit"
      }
    },
    "build": {
      "dependsOn": ["^build", "tsc"],
      "executor": "@nx/rollup:rollup",
      "options": {
        "rollupConfig": "{projectRoot}/rollup.config.mjs"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "[[ ! -f {projectRoot}/index.spec.ts ]] || npx tsx {projectRoot}/index.spec.ts"
      }
    },
    "tdd": {
      "executor": "nx:run-commands",
      "options": {
        "command": "[[ ! -f {projectRoot}/index.spec.ts ]] || npx tsx --watch {projectRoot}/index.spec.ts"
      }
    }
  }
}
