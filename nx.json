{
  "workspaceLayout": { "libsDir": "./lib", "appsDir": "./lib" },
  "plugins": ["@nx/rollup/plugin"],
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "executor": "@nx/rollup:rollup",
      "options": {
        "rollupConfig": "{projectRoot}/rollup.config.mjs"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo true"
      }
    }
  }
}
